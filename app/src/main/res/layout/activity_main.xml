<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sebastian.howmuch.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbacumulado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acumulado"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/cbavanzado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avanzado"
            android:onClick="onCheckboxClicked"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayoutAcumulado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acumulado"
            />
        <EditText
            android:id="@+id/acumulado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:gravity="center"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayoutPerma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanente" />

        <EditText
            android:id="@+id/permaporcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="40" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayoutPerma1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanente 1"
             />
        <EditText
            android:id="@+id/perma1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:gravity="center"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/perma1porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number"
            android:gravity="center"
            android:text="20"
            />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanente 2"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="149dp" />

        <EditText
            android:id="@+id/perma2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="numberDecimal"
            android:gravity="center"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="140dp" />

        <EditText
            android:id="@+id/perma2porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="20"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="140dp" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayoutParcial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcial"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="216dp" />

        <EditText
            android:id="@+id/parcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:gravity="center"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="207dp" />

        <EditText
            android:id="@+id/parcialporcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number"
            android:text="30"
            android:gravity="center"
            tools:layout_editor_absoluteY="207dp"
            tools:layout_editor_absoluteX="230dp" />
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            />

        <CheckBox
            android:id="@+id/cbConfigurarParcial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Configurar"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLayoutParcialTeorico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
