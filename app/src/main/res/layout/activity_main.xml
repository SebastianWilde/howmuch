            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="207dp" />

        <EditText
            android:id="@+id/finalTeoricoPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
